<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox minHeight="540.0" minWidth="960.0" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.atedeg.ecscalademo.controller.MainViewController">
   <VBox spacing="10.0">
      <Label text="Label" />
      <HBox spacing="10.0">
         <Button fx:id="playPauseBtn" mnemonicParsing="false" text="Play" />
         <Button fx:id="addBallBtn" mnemonicParsing="false" text="Add Ball" />
         <Button fx:id="selectBallBtn" mnemonicParsing="false" text="SelectBall" />
      </HBox>
      <Label text="Label" />
      <HBox spacing="10.0">
         <Button fx:id="moveBtn" mnemonicParsing="false" text="Move" />
         <Button fx:id="changeVelBtn" mnemonicParsing="false" text="Change Velocity" />
      </HBox>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </VBox>
   <Separator />
   <StackPane alignment="TOP_RIGHT" prefHeight="380.0" prefWidth="920.0">
      <padding>
         <Insets right="10.0" />
      </padding>
      <Pane fx:id="paneDelegate">
         <Canvas fx:id="canvasDelegate" height="${paneDelegate.height}" width="${paneDelegate.width}" />
      </Pane>

      <Label fx:id="fpsDelegate" alignment="TOP_RIGHT" text="FPS" textAlignment="CENTER" />
   </StackPane>
</VBox>
